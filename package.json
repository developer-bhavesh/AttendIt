{
  "name": "AttendIt",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "react-native run-ios --configuration Release",
    "clean": "react-native clean-project-auto"
  },
  "dependencies": {
    "@react-native-firebase/app": "^20.4.0",
    "@react-native-firebase/auth": "^20.4.0",
    "@react-native-firebase/firestore": "^20.4.0",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.11.0",
    "lucide-react-native": "^0.439.0",
    "react": "18.3.1",
    "react-native": "0.75.2",
    "react-native-gesture-handler": "~2.18.1",
    "react-native-paper": "^5.12.3",
    "react-native-safe-area-context": "^4.10.8",
    "react-native-screens": "^3.34.0",
    "react-native-svg": "^15.6.0",
    "react-native-vector-icons": "^10.1.0",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "^14.1.0",
    "@react-native-community/cli-platform-android": "^14.1.0",
    "@react-native-community/cli-platform-ios": "^14.1.0",
    "@react-native/babel-preset": "^0.75.2",
    "@react-native/eslint-config": "^0.75.2",
    "@react-native/metro-config": "^0.75.2",
    "@react-native/typescript-config": "^0.75.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "@types/react-test-renderer": "^18.3.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "react-test-renderer": "18.3.1",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation|react-native-gesture-handler|react-native-screens|react-native-safe-area-context|react-native-svg|lucide-react-native|@react-native-firebase|react-native-paper|react-native-vector-icons)/)"
    ]
  },
  "metro": {
    "resolver": {
      "assetExts": [
        "bin",
        "txt",
        "jpg",
        "png",
        "json",
        "mp4",
        "ttf",
        "otf",
        "woff",
        "woff2"
      ],
      "sourceExts": [
        "js",
        "json",
        "ts",
        "tsx",
        "jsx"
      ]
    },
    "transformer": {
      "babelTransformerPath": "metro-react-native-babel-transformer"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@react-native"
  }
}
